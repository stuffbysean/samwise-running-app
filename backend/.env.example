NODE_ENV=production
PORT=3000

# MongoDB Connection (Railway will provide this)
MONGODB_URI=mongodb://127.0.0.1:27017/samwise-production

# Frontend URLs for CORS
FRONTEND_URL=https://your-domain.railway.app

# Security
JWT_SECRET=your-strong-jwt-secret-key-here
BCRYPT_ROUNDS=12

# File Upload
MAX_FILE_SIZE=10485760

# CORS Origins
ALLOWED_ORIGINS=https://your-domain.railway.app